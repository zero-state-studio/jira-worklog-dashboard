# JIRA Worklog Dashboard Configuration
# Copy this file to config.yaml and fill in your values

# JIRA instances configuration
jira_instances:
  - name: "Company Main"
    url: "https://your-company.atlassian.net"
    email: "your.email@company.com"
    api_token: "your-api-token-here"
    # Get your token from: https://id.atlassian.com/manage-profile/security/api-tokens
  
  - name: "Company Partner"
    url: "https://partner-company.atlassian.net"
    email: "your.email@partner.com"
    api_token: "partner-api-token-here"

# Team configuration
