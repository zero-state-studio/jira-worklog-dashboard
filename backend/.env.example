# ============================================================================
# JIRA Worklog Dashboard - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE - PostgreSQL
# ============================================================================

# LOCAL DEVELOPMENT
DATABASE_URL=postgresql://jira_user:dev_password_123@localhost:5432/jira_worklog_dev

# RAILWAY PRODUCTION (set in Railway dashboard)
# DATABASE_URL=postgresql://postgres:xxxxx@containers-us-west-xxx.railway.app:5432/railway

# ============================================================================
# AUTHENTICATION - Google OAuth
# ============================================================================

# Get from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# JWT Secret (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-64-chars

# Redirect URI (update with your domain)
# Local: http://localhost:8000/api/auth/callback
# Railway: https://your-app.railway.app/api/auth/callback
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/callback

# ============================================================================
# JIRA / TEMPO (Optional - can configure via UI)
# ============================================================================

JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_TOKEN=your-jira-api-token
TEMPO_TOKEN=your-tempo-api-token

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Demo mode
JIRA_DASHBOARD_DEMO_MODE=false

# CORS origins (comma-separated)
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# RAILWAY SPECIFIC (Auto-injected on Railway)
# ============================================================================

# PORT - Railway sets this automatically
# PORT=8000

# RAILWAY_ENVIRONMENT=production
# RAILWAY_DEPLOYMENT_ID=xxx
